<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:UserControls="clr-namespace:Messenger.UserControls" >

    <!-- It's spring already - название чата (логотип, если угодно) -->
    <ControlTemplate x:Key="Logo">
        <Canvas>
            <TextBlock FontSize="36"
                       FontWeight="Bold"
                       Foreground="#F3A250"
                       Opacity="0.3"
                       Text="It's spring already"
                       Canvas.Top="7"/>
            <TextBlock FontSize="36"
                       FontWeight="Bold"
                       Foreground="#8A9563"
                       Opacity="0.95"
                       Text="It's spring already"
                       Canvas.Top="0"/>
        </Canvas>
    </ControlTemplate>

    <!--Всплывающая подсказка для невалидных полей-->
    <ControlTemplate x:Key="errorToolTipStyle" TargetType="ToolTip">
        <TextBlock TextWrapping="Wrap"
                   MaxWidth="400"
                   Height="auto"
                   Background="#473f4a"
                   Opacity="0.8"
                   Foreground="#AFD7E0"
                   FontSize="16"
                   Padding="5">
            <ContentPresenter HorizontalAlignment="Left" 
                              VerticalAlignment="Center"/>
        </TextBlock>
    </ControlTemplate>

</ResourceDictionary>